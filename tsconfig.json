{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "outDir": "./dist",
    "removeComments": false,
    "sourceMap": true,
    "mapRoot": "./dist",
    "sourceRoot" : "./"
  },
  "exclude": [
    "node_modules",
    "typings/browser.d.ts",
    "typings/browser",
    "typings/modules/q",
    "typings/modules/q/index.d.ts",
    "typings/globals/node/index.d.ts"
  ],
  "filesGlob": [
    "./src/**/*.ts",
    "./test/**/*.ts",
    "!./node_modules/**/*.ts",
    "src/custom-typings.d.ts",
    "typings/main.d.ts"
  ],
  "compileOnSave": false,
  "buildOnSave": false,
  "atom": {
    "rewriteTsconfig": false
  }
} 
