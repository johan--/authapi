{
  "name": "authuser-api",
  "description": "Customer API - Auth User Service",
  "version": "0.7.5",
  "private": true,
  "author": "Taylor & Francis Group",
  "license": "PRIVATE",
  "repository": {
    "type": "git",
    "url": "http://stash.crcpress.local:7990/scm/platcust/authuser-api.git"
  },
  "engines": {
    "node": ">= 4.2.1",
    "npm": ">= 3"
  },
  "scripts": {
    "rimraf": "rimraf",
    "tslint": "tslint",
    "typedoc": "typedoc",
    "typings": "typings",
    "clean": "npm cache clean && npm run rimraf -- node_modules doc typings coverage dist",
    "clean:dist": "npm run rimraf -- dist",
    "preclean:install": "npm run clean",
    "clean:install": "npm set progress=false && npm install",
    "preclean:start": "npm run clean",
    "clean:start": "npm start",
    "build": "tsc && gulp copy-oidc && gulp copy-swagger && npm run static" ,
    "prebuild:dev": "npm run clean:dist",
    "build:dev": "npm run build -- --authuser-api:environment=dev && gulp copy-oidc",
    "prebuild:uat": "npm run clean:dist",
    "build:uat": "npm run build -- --authuser-api:environment=uat && gulp copy-oidc",
    "prebuild:prod": "echo prebuild:prod... creating tarball...",
    "build:prod": "npm run build -- --authuser-api:environment=prod && gulp copy-oidc",
    "postbuild:prod": "npm run createarchive",
    "server": "npm run server:dev",
    "server:local": "set \"NODE_ENV=local\" && node dist/src/app/app.js",
    "server:dev": "set \"NODE_ENV=dev\" && node dist/src/app/app.js",
    "server:uat": "set \"NODE_ENV=uat\" && node dist/src/app/app.js",
    "server:prod": "set \"NODE_ENV=prod\" &&  node dist/src/app/app.js",
    "lint": "npm run tslint '**/*.ts'",
    "test": "set \"NODE_ENV=test\" && mocha \"dist/test/unit/**/*.js\" --recursive -R spec",
    "istanbul": "istanbul",
    "cover": "set \"NODE_ENV=test\" && istanbul cover ./node_modules/mocha/bin/_mocha \"dist/test/unit/**/*.js\" -- -R spec",
    "testdeploy": "set \"NODE_ENV=test\" && mocha \"./dist/test/**/*.js\" --recursive -R nyan",
    "docs": "npm run typedoc -- --options typedoc.json --exclude '**/*.spec.ts' ./src/",
    "start": "npm run server:dev",
    "swagger": "node dist/src/swagger/swagger.js",
    "postinstall": "npm run typings -- install",
    "createarchive": "gulp archive",
    "static": "gulp copy-static && npm run COPYJS && npm run COPYEJS && npm run COPYIMG",
    "COPYJS": "gulp copy-js",
    "COPYEJS": "gulp copy-ejs",
    "COPYIMG": "gulp copy-img",
    "webdriver-manager": "webdriver-manager",
    "webdriver:start": "npm run webdriver-manager start",
    "webdriver:update": "npm run webdriver-manager update",
    "pree2e": "npm run webdriver:update -- --standalone",
    "protractor": "protractor",
    "e2e": "set \"NODE_ENV=uat\" && npm run protractor",
    "integration": "set \"NODE_ENV=test\" && mocha \"dist/test/integration/api-db-test/*.js\" --recursive -R spec"
  },
  "dependencies": {
    "@newrelic/native-metrics": "1.0.0",
    "@types/q": "0.0.32",
    "@types/winston": "^2.2.0",
    "ajax-request": "^1.2.1",
    "angular": "^1.5.8",
    "api-response": "git+ssh://git@bitbucket.crcpress.local:7999/tfeps/api-response.git#master",
    "base64url": "^2.0.0",
    "bcryptjs": "latest",
    "body-parser": "^1.15.0",
    "connect-mongo": "^1.2.1",
    "cookie-parser": "^1.4.3",
    "core-js": "^2.3.0",
    "cors": "^2.7.1",
    "crypto": "0.0.3",
    "db-connection": "git+ssh://git@bitbucket.crcpress.local:7999/tfeps/db-connection.git#master",
    "ejs": "^2.5.1",
    "email-templates": "2.5.4",
    "express": "^4.13.3",
    "express-session": "^1.13.0",
    "gulp": "^3.9.1",
    "gulp-gzip": "^1.4.0",
    "gulp-tar": "^1.9.0",
    "istanbul": "^0.4.3",
    "jwt-simple": "^0.5.0",
    "lodash": "^4.11.1",
    "log4js": "^0.6.35",
    "method-override": "^2.3.5",
    "mocha": "^2.5.3",
    "mongoose": "~4.5.4",
    "newrelic": "^1.36.0",
    "node-gyp": "^3.4.0",
    "nodemailer": "^2.4.2",
    "nodemailer-smtp-transport": "^2.5.0",
    "passport": "^0.3.2",
    "passport-custom": "^1.0.5",
    "passport-facebook": "^2.1.1",
    "passport-google-oauth2": "^0.1.6",
    "passport-linkedin": "^1.0.0",
    "passport-local": "^1.0.0",
    "passport-oauth2": "^1.3.0",
    "passport-twitter": "^1.0.4",
    "promise": "^7.1.1",
    "q": "^1.4.1",
    "request": "^2.79.0",
    "swagger-jsdoc": "^1.8.4",
    "swagger-node-express": "^2.1.3",
    "typings": "^1.0.4",
    "winston": "^2.3.1",
    "winston-daily-rotate-file": "^1.4.4"
  },
  "devDependencies": {
    "@types/node": "^6.0.54",
    "chai": "^3.5.0",
    "chai-http": "^3.0.0",
    "errorhandler": "^1.4.3",
    "es6-promise": "^3.1.2",
    "es6-shim": "^0.35.0",
    "es7-reflect-metadata": "^1.6.0",
    "http-server": "^0.9.0",
    "mock-express-request": "^0.1.1",
    "mock-express-response": "^0.1.2",
    "phantomjs": "^2.1.7",
    "protractor": "^5.0.0",
    "rimraf": "^2.5.2",
    "sinon": "^1.17.4",
    "ts-node": "^0.7.1",
    "tslint": "^3.8.1",
    "typedoc": "^0.3.12",
    "typescript": "^2.1.4",
    "typings": "^1.0.4",
    "uuid": "^3.0.1"
  }
}
